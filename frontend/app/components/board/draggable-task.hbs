<div
  class="task"
  draggable="true"
  {{on "dragstart" this.onDragStart}}
  {{on "dragend" this.onDragEnd}}
  {{on "click" this.openModal}}
>
  <span>{{@task.task_name}}</span>

  <div class="task__footer">
    <span>{{concat this.projectKey " - " @task.id}}</span>

    <div class="icon-container">
      <img
        src={{concat "/assets/icons/task-priority-" @task.task_priority ".svg"}}
        alt="Task Priority"
      />
      <img
        src={{concat
          "https://api.dicebear.com/9.x/initials/svg?radius=50&size=24&seed="
          @task.assignee.user_name
        }}
        alt="Assigned User"
      />
    </div>
  </div>
</div>
{{#if this.isModalOpen}}
  <Modal::Edit-Task @task={{@task}} @closeModal={{this.closeModal}} />
{{/if}}