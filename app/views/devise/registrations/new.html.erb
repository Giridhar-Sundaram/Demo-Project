<h3>Sign up </h3>
<br/>
<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "login-page--form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="input-field">
    <%= f.label :email , class: "input-field__label"%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="input-field">
    <%= f.label :password , class: "input-field__label"%>
    <%= f.password_field :password, autocomplete: "new-password" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
  </div>

  <div class="input-field">
    <%= f.label :password_confirmation , class: "input-field__label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br/>
  <br/>
  <%= f.submit "Sign up" , class: "btn--primary btn--primary-lg"%>

<% end %>
<br/>
<%= link_to "Log in", new_session_path(resource_name), class: "btn--secondary btn--secondary-lg" %>

